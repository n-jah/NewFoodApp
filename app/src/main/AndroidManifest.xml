<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.goldenteamproject">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/applogo"
        android:label="@string/new_food_app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoldenTeamProject"
        tools:targetApi="31">
        <activity
            android:name=".activites.DescriptionSheet"
            android:exported="false"
            android:label="your recipe">


        </activity>
        <activity
            android:name=".activites.DetailedDialyMealActivity"
            android:exported="false" />
        <activity
            android:name=".activites.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activites.wellcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.GoldenTeamProject.NoActionBar">>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activites.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.GoldenTeamProject.NoActionBar">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>